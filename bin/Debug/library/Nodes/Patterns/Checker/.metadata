name "Checker"
color 0x9934EBFF
category "Core/Patterns"

param color colA "Color A" 0xFFFFFFFF
param color colB "Color B" 0x000000FF
param bool uniform "Uniform Size"
param float sizeFU "Size (U)" 0.1
param float sizeFX "Size (X)" 0.1
param float sizeFY "Size (Y)" 0.1
output colortex outTex "Out"

show sizeFU (uniform == true)
show sizeFX (uniform == false)
show sizeFY (uniform == false)

display outTex